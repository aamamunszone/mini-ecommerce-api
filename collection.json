{
  "info": {
    "_postman_id": "mini-ecommerce-api-docs",
    "name": "Mini E-Commerce API",
    "description": "Comprehensive API collection for testing Auth, Products, Cart, and Order flows.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "User Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Abdullah Al Mamun\",\n    \"email\": \"aamamunszone@gmail.com\",\n    \"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/api/auth/register" }
          }
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"aamamunszone@gmail.com\",\n    \"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/api/auth/login" }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/products" }
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Mechanical Keyboard\",\n    \"price\": 120,\n    \"description\": \"RGB Backlit mechanical keyboard\",\n    \"category\": \"Electronics\",\n    \"countInStock\": 50\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/api/products" }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Place Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"orderItems\": [\n        {\n            \"name\": \"Mechanical Keyboard\",\n            \"qty\": 2,\n            \"price\": 120,\n            \"product\": \"PRODUCT_ID_HERE\"\n        }\n    ]\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/api/orders" }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" },
    { "key": "token", "value": "YOUR_JWT_TOKEN_HERE" }
  ]
}
